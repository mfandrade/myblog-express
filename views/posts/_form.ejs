<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= post.title %>" required autofocus class="form-control">
</div>
<div class="form-group">
    <label for="title">Content</label>
    <textarea class="form-control" name="content" id="content" rows="15" cols="80"><%= post.content %></textarea>
</div>

